{
  "name": "Portfolio",
  "version": "1.0.0",
  "keywords": [
    "Potfolio",
    "Tailwindcss",
    "Postcss",
    "Parcel"
  ],
  "description": "My personal website - Using Parcel as a bundler tool and tailwindcss a css framework",
  "source": "src/index.html",
  "repository": "https://github.com/ahmadXtn/Portfolio.git",
  "author": "Ahmed bouazizi <56606377+ahmadXtn@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "config" : { "port" : "4111" },
  "scripts": {
    "clean": "npx rimraf -rf dist .parcel-cache",
    "clean:build": "npx rimraf -rf build",
    "parcel:serve": "parcel serve ./src/index.html --no-cache -p 1234",
    "parcel:build": "parcel build ./src/index.html --dist-dir build",
    "start": "npm-run-all -s clean parcel:serve ",
    "build": "cross-env NODE_ENV=production npm-run-all -s clean:build parcel:build",
    "ngrok:run": "ngrok start -config ngrok.yml website"
  },
  "dependencies": {
    "tailwindcss": "^2.2.15"
  },
  "devDependencies": {
    "@parcel/transformer-image": "2.0.0-rc.0",
    "autoprefixer": "^10.3.4",
    "browserslist": "^4.17.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-rc.0",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-glitch": "^3.2.38",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "postcss-url": "^10.1.3",
    "posthtml": "^0.16.5",
    "posthtml-doctype": "^1.1.1",
    "posthtml-expressions": "^1.9.0",
    "posthtml-include": "^1.7.1",
    "posthtml-webp": "^2.1.0",
    "ngrok": "^4.2.2"
  }
}
